RewriteEngine on
RewriteCond %{HTTP:X-Forwarded-Proto} ^http$
RewriteRule .* https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

RewriteRule ^css/(.*)$ https://s3.amazonaws.com/hlf.stjosephcontent.com/css/$1 [R,L]
RewriteRule ^images/(.*)$ https://s3.amazonaws.com/hlf.stjosephcontent.com/images/$1 [R,L]

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ index.php?/$1 [L]
</IfModule>
 